      {
        "if": {
          "property": "extension.urlbar-llm.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.urlbar-llm.animations-enabled",
    "label": "Enable Animations",
    "type": "checkbox",
    "defaultValue": true,
