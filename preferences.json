    "conditions": [
      {
        "if": {
          "property": "extension.urlbar-llm.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.urlbar-llm.max-result-height",
    "label": "Max Result Height (px)",
    "type": "number",
    "defaultValue": 300,
    "description": "Maximum height of the streaming result in pixels before scrolling.",
    "conditions": [
      {
        "if": {
